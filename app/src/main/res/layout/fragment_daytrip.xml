<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coursethumbnail"
                android:layout_width="392dp"
                android:layout_height="170dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Course Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:text="Category" />

            <TextView
                android:background="@color/colorAccent"
                android:textColor="#3A3A3A"
                android:id="@+id/tvdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/coursethumbnail2"
                android:layout_width="392dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop" />

            <TextView
                android:textColor="#3A3A3A"
                android:id="@+id/tvdescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description2"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/coursethumbnail3"
                android:layout_width="392dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop" />

            <TextView
                android:textColor="#3A3A3A"
                android:id="@+id/tvdescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description3"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/coursethumbnail4"
                android:layout_width="405dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop" />
            <TextView
                android:textColor="#3A3A3A"
                android:id="@+id/tvdescription4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description4"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/coursethumbnail5"
                android:layout_width="392dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop" />

            <TextView
                android:textColor="#3A3A3A"
                android:id="@+id/tvdescription5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description5"
                android:textSize="16sp" />



            <ImageView
                android:id="@+id/coursethumbnail6"
                android:layout_width="392dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop" />
            <TextView
                android:background="@color/colorAccent"
                android:id="@+id/tvtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="추천코스 지도"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvdescription6"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description6"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>